<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="5dp"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="146dp">


    <TextView
        android:id="@+id/txtResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:editable="false"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAC"
        app:layout_constraintEnd_toEndOf="@+id/bolme"
        app:layout_constraintStart_toStartOf="@+id/btnAC" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"

        app:layout_constraintBottom_toTopOf="@+id/nm0"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/esittir"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/orangeButtonColor"
        android:text="="
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toplama" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/virgul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text=","
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/esittir"
        app:layout_constraintStart_toEndOf="@+id/nm0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/whiteButtonColor"
        android:text="AC"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toTopOf="@+id/nm7"
        app:layout_constraintStart_toStartOf="@+id/nm7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnModu"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/whiteButtonColor"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnposNeg"
        app:layout_constraintEnd_toStartOf="@+id/bolme"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnposNeg" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bolme"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/orangeButtonColor"
        android:text="รท"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnModu"
        app:layout_constraintEnd_toEndOf="@+id/carpma" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnposNeg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/whiteButtonColor"
        android:text="+/-"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAC"
        app:layout_constraintEnd_toStartOf="@+id/btnModu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAC" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm0"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="0"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nm2"
        app:layout_constraintStart_toStartOf="@+id/nm1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="3"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm2"
        app:layout_constraintEnd_toStartOf="@+id/toplama"
        app:layout_constraintStart_toEndOf="@+id/nm2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/toplama"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/orangeButtonColor"
        android:text="+"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm3"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="2"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm1"
        app:layout_constraintEnd_toStartOf="@+id/nm3"
        app:layout_constraintStart_toEndOf="@+id/nm1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="4"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toTopOf="@+id/nm1"
        app:layout_constraintStart_toStartOf="@+id/nm1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="5"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm4"
        app:layout_constraintEnd_toStartOf="@+id/nm6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nm4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cikarma"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/orangeButtonColor"
        android:text="-"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm6"
        app:layout_constraintEnd_toEndOf="@+id/toplama" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="6"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm5"
        app:layout_constraintEnd_toStartOf="@+id/cikarma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nm5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="7"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toTopOf="@+id/nm4"
        app:layout_constraintStart_toStartOf="@+id/nm4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/mainBackGroundColor"
        android:text="9"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm8"
        app:layout_constraintEnd_toStartOf="@+id/carpma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nm8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/carpma"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/orangeButtonColor"
        android:text="x"
        android:textSize="22sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm9"
        app:layout_constraintEnd_toEndOf="@+id/cikarma" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nm8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:textSize="22sp"
        android:textStyle="bold"
        app:backgroundTint="@color/mainBackGroundColor"
        app:cornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/nm7"
        app:layout_constraintEnd_toStartOf="@+id/nm9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nm7" />

    <TextView
        android:id="@+id/textTvWorks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>